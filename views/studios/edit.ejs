<% include ../partials/header %>
<div class="container">
	<h1 class="text-center">Edit <%= studio.name %></h1>
		<form class="form-styling" action="/studios/<%= studio._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="studio[name]" value="<%= studio.name %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="studio[image]" value="<%= studio.image %>">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="studio[description]" value="<%= studio.description %>">
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-lg btn-block">Edit Studio</button>
			</div>
			<a href="/studios/<%= studio._id %>">Go back</a>
		</form>
</div>
<% include ../partials/footer %>