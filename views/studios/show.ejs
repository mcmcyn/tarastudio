<% include ../partials/header %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">taraStudio</p>
			<div class="list-group-item active">Info 1</div>
			<div class="list-group-item">Info 2</div>
			<div class="list-group-item">Info 3</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= studio.image %>">
				<div class="caption-full">
					<h4 class="pull-right">Php100.00/hour</h4>
					<h4><a href="#"><%= studio.name %></a></h4>
					<p><%= studio.description %></p>
					<p>posted by <strong><%= studio.author.username %></strong></p>
					<% if(currentUser && studio.author.id.equals(currentUser._id)){ %>
					<a class="btn btn-xs btn-warning" href="/studios/<%= studio._id %>/edit">Edit Studio</a>
					<form id="delete-form" action="/studios/<%= studio._id %>?_method=DELETE" method="POST">
						<button class="btn btn-xs btn-danger">Delete</button>
					</form>
					<% } %>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/studios/<%= studio._id %>/comments/new">Add comment</a>
				</div>
				<hr>
				<% studio.comments.forEach(function(comment){ %>
				<div class="row">
					<div class="col-md-12">
						<strong><%= comment.author.username %></strong>
						<span class="pull-right">10 days ago</span>
						<p><%= comment.text %></p>
						<% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
						<a class="btn btn-xs btn-warning"href="/studios/<%= studio._id %>/comments/<%= comment._id %>/edit">Edit comment</a>
						<form id="delete-form" action="/studios/<%= studio._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
						<button class="btn btn-xs btn-danger">Delete</button>
						</form>
						<% } %>
						<% }) %>
					</div>
				</div>				
			</div>
		</div>
	</div>
</div>	
<% include ../partials/footer %>