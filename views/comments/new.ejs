<div class="container">
	<h1 class="text-center">Add a New Comment on <%= studio.name %></h1>
		<form class="form-styling" action="/studios/<%= studio._id %>/comments" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="text" placeholder="text">
			</div>
			<div class="form-group">
				<button class="btn btn-primary btn-lg btn-block">Submit Comment</button>
			</div>
			<a href="/studios/<%= studio._id %>">Go back</a>
		</form>
</div>
